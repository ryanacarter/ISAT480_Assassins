<NewUserScreen>:
    FloatLayout:
            
        GridLayout:
            cols: 2
            size_hint: .5, None
            height: 150
            spacing: 10
            row_default_height: 40
            pos_hint: {'center_x': .5, 'center_y': .5}

            Label:
                text:'First Name:'
            TextInput:
                id:fname_input
                size_hint_x: None
                width: 220
            Label:
                text:'Last Name:'
            TextInput:
                id:lname_input
                size_hint_x: None
                width: 220
            Label:
                text:'Username:'
            TextInput:
                id:uname_input
                size_hint_x: None
                width: 220
            Label:
                text:'Password'
            TextInput:
                id:pword_input
                size_hint_x: None
                width: 220
            Button:
                text: 'Go Back'
                id:'LoginButton'
                on_press:root.manager.current = 'Login'
            Button:
                text: 'Get Started'
                id: 'GetStarted'
                on_press: root.GetStarted()


<LoginScreen>:

    GridLayout:
        cols: 2
        size_hint: .8, .5
        pos_hint: {'center_x':.5, 'center_y': .5}
        default_row_height: 20
        Button:
            text: 'Username'
            width: 100
        TextInput:
            id: 'username_input'
        Label:
            text: 'Password'
        TextInput:
            id: 'password_input'

<ErrorScreen>:

    FloatLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}
