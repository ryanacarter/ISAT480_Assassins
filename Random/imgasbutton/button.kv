
FloatLayout:
    Button:
        id: kill_button

        # background_normal = Background image of the button used for the default graphical representation when the button is not pressed.
        # To use an image for the appearance of the button, simply give the name of the file on the right side of the assignment.
        background_normal: "red_button-1979px.png"

        # Because the size for x and y are set for 50%, positioning x and y at 25% centers the button.
        pos_hint: { 'x': .25, 'y': .25 }
        size_hint_y: .5
        size_hint_x: .5

        # text will not be hidden by the image.
        text: 'Kill'

	Button:
		id: back_button
		text: 'Back'
		pos_hint: { 'x': 0, 'y': .9 }
		size_hint_y: .1
		size_hint_x: .2

	Label:
		id: game_number
		text: 'Game 1'
		font_size: 40
		pos_hint: { 'x': .4, 'y': .9 }
		size_hint_y: .1
		size_hint_x: .2

	Label:
		id: target_name
		text: 'Target: Ryan'
		font_size: 30
		pos_hint: { 'x': .1, 'y': .8 }
		size_hint_y: .1
		size_hint_x: .2

	Label:
		id:players_remaining
		text: 'Players Remaining: '
		font_size: 30
		pos_hint: { 'x': .5, 'y': .06 }
		size_hint_y: .1
		size_hint_x: .2
