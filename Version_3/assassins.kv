<RootWidget>
    canvas:
        Rectangle:
            source:'pictures/background.jpg'
            size:self.size
        Rectangle:
            source:'pictures/creed.png'
            size: self.width / 1,  self.height / 2
            pos: 0, 450
            
<LoginScreen>

    GridLayout:
        pos_hint:{'center_x':.5, 'center_y':.5}
        row_default_height: 5
        size_hint: .8, .3
        cols:2
        Label:
            text:'Username'
            size_hint_y:.2
        TextInput:
            id:uname_input
        Label:
            text:'Password'
        TextInput:
            id:pass_input
            password: True
        Button:
            text:'Sign Up'
            on_press:root.signup()
        Button:
            text:'Login'
            on_press:root.login_but()

<NewUserScreen>
    GridLayout:
        pos_hint:{'center_x':.5, 'center_y':.5}
        row_default_height: 5
        size_hint: .8, .4
        cols:2
        Label:
            text:'First Name'
        TextInput:
            id:'first_input'
        Label:
            text:'Last Name'
        TextInput:
            id:'last_input'
        Label:
            text:'Username'
            size_hint_y:.2
        TextInput:
            id:'uname_input'
        Label:
            text:'Password'
        TextInput:
            id:'pass_input'
        Button:
            text:'Go Back'
            on_press: root.goback()
        Button:
            text:'Get Started'

<UsersHomeScreen>
    Button:
        text:"THANK GOD!!!!"
        pos_hint:{'center_x':.5, 'center_y':.5}
