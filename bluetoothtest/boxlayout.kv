# File name: boxlayout.kv

<BoxLayout>:
    Button:
        id: b0
        text: '0'
        on_release: app.reset([b1, b2, b3, b4, b5])
 
    ToggleButton:
        id: b1
        text: '1'
        on_release: app.send(self.text)
 
    ToggleButton:
        id: b2
        text: '2'
        on_release: app.send(self.text)
 
    ToggleButton:
        id: b3
        text: '3'
        on_release: app.send(self.text)
 
    ToggleButton:
        id: b4
        text: '4'
        on_release: app.send(self.text)
 
    ToggleButton:
        id: b5
        text: '5'
        on_release: app.send(self.text)






